{
  "name": "root",
  "repository": "https://github.com/marcj/estdlib.ts",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "MIT",
  "scripts": {
    "test": "rm -rf packages/*/dist && jest --coverage",
    "bootstrap": "lerna bootstrap --hoist --no-ci",
    "tsc": "lerna run tsc",
    "publish": "lerna run tsc && lerna publish",
    "readme": "cd packages/dev && npm run readme"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^11.9.5",
    "coveralls": "^3.0.2",
    "bluebird": "^3.5.3",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "ts-jest": "^23.10.4",
    "tslint": "5.11.0",
    "typescript": "^3.1.1"
  },
  "engines": {
    "node": ">= 8.9.0"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/lib/**/*",
      "!**/*.d.ts",
      "!index.ts"
    ],
    "testPathIgnorePatterns": [
      "packages/dev"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
